<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putihTulang"
    android:orientation="vertical"
    tools:context=".registerScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="25sp"
            android:layout_marginTop="80dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/boldpop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your information to create an account!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mediumpop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mediumpop"/>

            <EditText
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_stroke"
                android:padding="10dp"
                android:text="Username"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mediumpop"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mediumpop"/>

            <EditText
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_stroke"
                android:padding="10dp"
                android:text="Email"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/mediumpop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_stroke"
                android:padding="16dp"
                android:text="Password"
                android:drawableRight="@drawable/ic_passd"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat Password"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="358dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_btn_stroke"
            android:padding="16dp"
            android:text="Repeat Password"
            android:drawableRight="@drawable/ic_passd"
            android:textColor="@color/black" />

    </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:id="@+id/textViewlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account Login here"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonregister"
            android:fontFamily="@font/mediumpop"/>

    </LinearLayout>

